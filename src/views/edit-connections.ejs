<%- include('partials/header') %>


<div class="container" style="margin-top: 2rem;  ">


    <div class="row">

        <div class="col-md-6">

            <div class="card">


                <div class="card-body">
                    <form action="/update_connection/<%=connection[0].connection_id%>" method="POST"
                        style="margin: 2rem; margin-bottom: 1rem;">
                        <h4 style="text-align: center;">Connection Data</h4>
                        <div class="form-group">
                            <label for="">Description:</label>
                            <input type="text" name="description" class="form-control"
                                value="<%=connection[0].description%>" required>
                        </div>
                        <div class="form-group">
                            <label for="">Connection #:</label>
                            <input type="text" name="connection_number" class="form-control"
                                value="<%=connection[0].connection_number%>" required>
                        </div>
                        <div class="form-group">
                            <label for=""> Connection Type:</label>
                            <input type="text" name="connection_type" class="form-control"
                                value="<%=connection[0].connection_type%>" required>
                        </div>
                        <div class="form-group">
                            <label>Thread Type:</label>
                            <select class="form-control" name="thread_type">
                                <% if(connection[0].thread_type == "RH"){%>
                                <option selected>RH</option>
                                <option>LH</option>

                                <%}%>
                            
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Operation:</label>
                        <select class="form-control" name="operation">
                            <option>Make</option>
                            <option>Brake</option>

                        </select>
                    </div>

                    <div class="form-group">
                        <label for="">Target Torque:</label>
                        <input type="text" name="target_torque" class="form-control" value="<%=connection[0].target_torque%>"
                                required>
                        </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-block"> Add Connection</button>
                </div>
                </form>

            </div>
        </div>



    </div>
</div>

<%- include('partials/footer') %>
